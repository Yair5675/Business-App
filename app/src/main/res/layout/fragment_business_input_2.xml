<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="8dp">

    <TextView
        android:id="@+id/fragBusinessInput2TvTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragBusinessInput2GlTopMapBoundary"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/frag_business_input_2_title"
        android:textSize="28sp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragBusinessInput2GlTopMapBoundary"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragUserInput2MapFragContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/fragBusinessInput2GlTopMapBoundary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>