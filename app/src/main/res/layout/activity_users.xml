<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activities.UsersActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/actUsersTitle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginVertical="16dp"

        android:text="@string/act_users_title"
        android:textSize="38sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <androidx.appcompat.widget.SearchView
            android:id="@+id/actUsersSvUserSearch"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:defaultQueryHint="@string/act_users_query_hint"
            app:iconifiedByDefault="false"
            />

        <TextView
            android:id="@+id/actUsersTvSortBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/act_users_sort_by_txt"
            android:textSize="18sp"
            />

        <Spinner
            android:id="@+id/actUsersSpinSorting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/actUsersRvUsers"

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="4dp"
        />

</LinearLayout>