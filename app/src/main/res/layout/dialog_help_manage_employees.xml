<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="@string/users_menu_help_manage_employees"
        android:textSize="28sp"
        android:textStyle="bold"

        android:layout_marginBottom="8dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:text="@string/dialog_help_manage_employees_paragraph_1"
                android:layout_marginBottom="8dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="23sp"
                android:text="@string/dialog_help_manage_employees_applicants_title"
                android:layout_marginBottom="4dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:text="@string/dialog_help_manage_employees_paragraph_2"
                android:layout_marginBottom="8dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/manage_applicants"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="23sp"
                android:text="@string/dialog_help_manage_employees_employee_status_title"
                android:layout_marginVertical="4dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"

                android:text="@string/dialog_help_manage_employees_paragraph_3"
                android:textSize="18sp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/employee_actions"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>