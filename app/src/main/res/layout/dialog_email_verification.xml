<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogEmailVerificationTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_email_verification_title"
        android:textSize="32sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_email_verification_intructions"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        />

    <android.widget.Button
        android:id="@+id/dialogEmailVerificationBtnResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ImprovedButtonAppearance"
        android:text="@string/dialog_email_verification_resend_email_txt"
        android:padding="8dp"
        />
</LinearLayout>